@model WebApp.Models.Movies.MovieCast

<h2>Dodaj nową postać do obsady</h2>

<form asp-action="AddToCast" method="post">
    <div class="form-group">
        <label asp-for="CharacterName" class="form-label">Imię postaci</label>
        <input asp-for="CharacterName" class="form-control" id="CharacterName" required />
        <span asp-validation-for="CharacterName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PersonName">Imię i nazwisko aktora</label>
        <input type="text" class="form-control" id="PersonName" name="PersonName" required />
    </div>

    <div class="form-group">
        <label asp-for="GenderId" class="form-label">Płeć</label>
        <select asp-for="GenderId" class="form-control" id="GenderId">
            <option value="1">Mężczyzna</option>
            <option value="2">Kobieta</option>
            <option value="3">Inna</option>
        </select>
        <span asp-validation-for="GenderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CastOrder" class="form-label">Kolejność</label>
        <input asp-for="CastOrder" class="form-control" id="CastOrder" required />
        <span asp-validation-for="CastOrder" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="MovieId" value="@ViewBag.MovieId" />

    <button type="submit" class="btn btn-primary mt-3">Dodaj do obsady</button>
    <a asp-action="Details" asp-route-id="@ViewBag.MovieId" class="btn btn-secondary mt-3">Powrót</a>
</form>